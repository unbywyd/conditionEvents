{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist/es6",
    "sourceMap": true,
    "target": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "files": [
    "./src/index.ts",
    "./src/browser.ts"
  ]
}
